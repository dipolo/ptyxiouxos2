@model Ptyxiouxos2.Models.LoginViewModel

@{
    ViewBag.Title = "Σύνδεση";
}


<div class="register-form">
    <h2><span> </span>Είσοδος χρήστη</h2>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id="loginForm", role = "form", @class="loginForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
		<div class="text-box">
            @{
                var usr = Html.DisplayNameFor(m => m.UserName);
            }
            @Html.TextBoxFor(m => m.UserName, new { id = "username", placeholder = usr })
            <span>@Html.ValidationMessageFor(m => m.UserName)</span>
		</div>
        
		<div class="text-box">
            @{
                var pwd = Html.DisplayNameFor(m => m.Password);
            }
            @Html.PasswordFor(m => m.Password, new { id = "password", placeholder = pwd })
            <span>@Html.ValidationMessageFor(m => m.Password)</span>
		</div>
        <div class="checkbox-grid-left">
            <p>
                Να με θυμάσαι
                @Html.CheckBoxFor(m => m.RememberMe, new {id="RememberMe1", @class="css-checkbox12" })
                @Html.Label("RememberMe1", " ", new { @class = "css-label12" })
            </p>
        </div>
        <input type="submit" value="Σύνδεση" />
        <label for="checkbox">
            <i>
                <a href="" style="font-size:0.8em">Επαναφορά κωδικού</a>
            </i>
        </label>
        <input class="org" type="button" value="Εγγραφη χρηστη">
    }
</div>

