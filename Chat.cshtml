@{
    Page.Title = "Συνομιλία - Πτυχιούχος 2.0";
}

	<div class="chat-login-form" style="display: none">
        <div class="chat-icon" id="chatIcon">
            <div style="position: relative; bottom: -150px;">Είσοδος</div>
        </div>
        <div class="chat-user-data">
            <div class="chat-user-name">
                <input id="userName" type="text" placeholder="Όνομα" maxlength="15" />
                <input id="passWord" type="password" placeholder="Κωδικός" />
                <span class="submit"></span>
            </div>
        </div>
    </div>

    <div id="firechat-wrapper"></div>

@section scripts {

    <script type='text/javascript' src='https://cdn.firebase.com/js/client/1.0.17/firebase.js'></script>
    <script type='text/javascript' src='https://cdn.firebase.com/js/simple-login/1.6.1/firebase-simple-login.js'></script>

    <link rel="stylesheet" href="@Href("~/FireChat/firechat-default.css")" />
    <link rel="stylesheet" href="@Href("~/Content/Chat.css")" />
    <script src="@Href("~/FireChat/firechat-default.js")"></script>
    <script src="@Href("~/Scripts/Chat.js")"></script>
}